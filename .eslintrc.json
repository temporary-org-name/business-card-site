{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "babel"
    ],
    "rules": {
        "eol-last": "error",
        "no-empty-pattern": "error",
        "no-loop-func": "off",
        "arrow-parens": ["error", "always"],
        "arrow-spacing": ["error", {"before": true, "after": true}],
        "constructor-super": "error",
        "no-class-assign": "error",
        "no-const-assign": "error",
        "no-dupe-class-members": "error",
        "no-new-symbol": "error",
        "no-this-before-super": "error",
        "no-useless-computed-key": "error",
        "no-useless-constructor": "error",
        "no-useless-rename": "error",
        "no-var": "error",
        "prefer-arrow-callback": ["error", {"allowNamedFunctions": true}],
        "prefer-const": "error",
        "prefer-rest-params": "error",
        "prefer-spread": "error",
        "rest-spread-spacing": ["error", "never"],
        "template-curly-spacing": ["error", "never"],
        "yield-star-spacing": ["error", "after"],
        "capitalized-comments": "off",
        "lines-between-class-members": ["error", "always"],
        "react/no-deprecated": "error",
        "react/prefer-es6-class": "error",
        "babel/semi": ["error", "always"],
        "unicorn/no-abusive-eslint-disable": 0,
        "no-identical-functions": false,
        "no-empty-interface": true,
        "no-internal-module": true,
        "typedef": [true, "call-signature"],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "array-type": [true, "array"],
        "class-name": true,
        "ban-types": [true, ["Object"]],
        "no-reference": true,
        "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
        "no-conditional-assignment": true,
        "no-constant-condition": "error",
        "no-control-regex": "error",
        "no-debugger": "error",
        "no-duplicate-case": "error",
        "no-empty-character-class": "error",
        "no-ex-assign": "error",
        "no-extra-semi": "error",
        "no-extra-boolean-cast": "error",
        "no-inner-declarations": "error",
        "no-invalid-regexp": "error",
        "no-irregular-whitespace": "error",
        "no-regex-spaces": "error",
        "no-sparse-arrays": "error",
        "no-unexpected-multiline": "error",
        "no-unsafe-finally": "error",
        "use-isnan": "error",
        "valid-typeof": "error",
        "curly": "error",
        "no-eval": "error",
        "no-invalid-this": "error",
        "no-multi-spaces": "error",
        "no-duplicate-imports": "error",
        "no-console": "error",
        "radix": "error",
        "arrow-body-style": ["error", "as-needed"],
        "array-bracket-spacing": "error",
        "brace-style": "error",
        "linebreak-style": ["error", "unix"],
        "ter-max-len": [true, {"code": 120, "ignoreUrls": true}],
        "new-parens": "error",
        "indent": ["error", 4],
        "no-trailing-whitespace": true,
        "object-curly-spacing": ["error", "never"],
        "one-variable-per-declaration": [true, "ignore-for-loop"],
        "object-literal-key-quotes": [true, "as-needed"],
        "quotemark": [true, "single", "jsx-double"],
        "semicolon": [true, "always"],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "comment-format": [true, "check-space"],
        "ter-arrow-parens": [true, "always"],
        "ter-arrow-spacing": [true],
        "no-var-keyword": true,
        "ter-prefer-arrow-callback": true,
        "no-require-imports": true,
        "space-within-parens": [true, "never"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "never"
        }],

        "jsx-alignment": true,
        "jsx-ban-elements": false,
        "jsx-ban-props": false,
        "jsx-boolean-value": [true, "never"],
        "jsx-curly-spacing": [true, "never"],
        "jsx-equals-spacing": [true, "never"],
        "jsx-key": true,
        "jsx-no-bind": true,
        "jsx-no-lambda": false,
        "jsx-no-multiline-js": false,
        "jsx-no-string-ref": true,
        "jsx-use-translation-function": false,
        "jsx-self-close": true,
        "jsx-space-before-trailing-slash": true,
        "jsx-wrap-multiline": true,
        "jsx-first-prop-new-line": "always",

        "no-collapsible-if": true,
        "no-else-after-return": true,
        "no-inferrable-types": true,
        "naming-convention": [
            true,
            {
                "type": "default",
                "format": "camelCase",
                "leadingUnderscore": "forbid",
                "trailingUnderscore": "forbid"
            },
            {
                "type": "variable",
                "format": ["camelCase", "PascalCase"]
            },
            {
                "type": "variable",
                "modifiers": ["const"],
                "format": ["camelCase", "PascalCase", "UPPER_CASE"]
            },
            {
                "type": "functionVariable",
                "format": ["camelCase", "PascalCase"]
            },
            {
                "type": "parameter",
                "format": ["camelCase", "PascalCase"]
            },
            {
                "type": "parameter",
                "modifiers": "unused",
                "leadingUnderscore": "require"
            },
            {
                "type": "member",
                "modifiers": "private",
                "leadingUnderscore": "require"
            },
            {
                "type": "member",
                "modifiers": "protected",
                "leadingUnderscore": "require"
            },
            {
                "type": "property",
                "modifiers": ["public", "static", "const"],
                "format": "UPPER_CASE"
            },
            {
                "type": "type",
                "format": "PascalCase"
            }
        ],
        "no-angle-bracket-type-assertion": true,
        "no-return-undefined": true,
        "no-static-this": true,
        "interface-over-type-literal": true,
        "member-ordering": [
            true,
            {
                "order": [
                    "static-field",
                    "private-instance-field",
                    "public-instance-field",
                    "instance-field",
                    "constructor",
                    "public-instance-method"
                ]
            }
        ],
        "max-union-size": [true, 7],
        "cognitive-complexity": [true, 20]
    }
}